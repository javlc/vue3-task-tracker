{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "typings/**/*"],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist", "typings", "src/types"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./typings", "./node_modules/@types", "./src/types"]
  }
}
